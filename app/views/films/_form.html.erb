
<%= form_for @film do |f| %>
  <form class="form-horizontal">
  <fieldset>
    <legend>Pelicula</legend>
    <div class="form-group">
      <%= f.label :title, "Titulo", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Titulo" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :title, "Año", class:"col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :year, class: "form-control", placeholder: "Año" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :rating, "Puntuacion", for: "select", class: "col-lg-2 control-label"%>
      <div class="col-lg-10">
        <%= f.select(:rating, options_for_select(@ratingSelect), { prompt: "Puchurra para el puntaje" }, { :class => "form-control", :id => "select" })%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, "Descripcion", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area :description, class: "form-control", rows:"3", id:"textArea" %>
      </div>
    </div>
    <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit button_name, class: "btn btn-primary" %>
          </div>
    </div>
  </fieldset>
</form>
<% end %>
